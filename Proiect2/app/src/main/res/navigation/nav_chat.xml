<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_chat"
    app:startDestination="@id/loadingChat">
    <fragment
        android:id="@+id/loadingChat"
        android:name="com.example.proiect.chat.loadingEmergencyChat.LoadingChat"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_go_to_chat"
            app:destination="@+id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.proiect.chat.ChatFragment"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="chatId"
            app:argType="integer" />
    </fragment>
</navigation>